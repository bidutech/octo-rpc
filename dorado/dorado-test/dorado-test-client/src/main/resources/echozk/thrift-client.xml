<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="client1" class="com.meituan.dorado.config.service.spring.ReferenceBean">
        <property name="appkey" value="com.meituan.octo.dorado.client"/>
        <property name="remoteAppkey" value="com.meituan.octo.dorado.server"/>
        <property name="serviceInterface" value="com.meituan.dorado.test.echo.Echo"/> <!-- 接口类 -->
        <property name="protocol" value="thrift"/>
        <property name="timeout" value="1000"/>
        <property name="registry" value="zookeeper://ip:port"/>      <!-- zookeeper配置 -->
    </bean>

